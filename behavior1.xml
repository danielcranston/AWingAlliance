<root main_tree_to_execute = "MainTree" >
    <BehaviorTree ID="MainTree">
        <Fallback name="root">
            <SubTree ID="AliveBehavior"/>
            <SubTree ID="DyingBehavior"/>
        </Fallback>
    </BehaviorTree>

        <BehaviorTree ID="AliveBehavior">
        <ReactiveSequence>
            <Action ID="IsAlive"/>
            <!-- Should have some IsTargetSet to avoid setting each tick, but this'll do for now -->
            <Action ID="SetTarget" target="{target}"/>
            <Action ID="FaceTarget" target="{target}"/>
        </ReactiveSequence>
     </BehaviorTree>

     <BehaviorTree ID="DyingBehavior">
        <Sequence>
            <Action ID="Tumble"/>
        </Sequence>
    </BehaviorTree>
 </root>