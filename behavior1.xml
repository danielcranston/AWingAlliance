<root main_tree_to_execute="MainTree">
    <BehaviorTree ID="MainTree">
        <Fallback name="root">
            <SubTree ID="RoamingBehavior" />
            <SubTree ID="DyingBehavior" />
        </Fallback>
    </BehaviorTree>

    <BehaviorTree ID="AliveBehavior">
        <ReactiveSequence>
            <Action ID="IsAlive" />
            <Sequence>
                <Action ID="SetTarget" target="{target}" />
                <Action ID="FaceTarget" target="{target}" />
            </Sequence>
        </ReactiveSequence>
    </BehaviorTree>

    <BehaviorTree ID="RoamingBehavior">
        <ReactiveSequence>
            <Action ID="IsAlive" />
            <Sequence>
                <Action ID="SetRoamingDestination" />
                <Action ID="RoamTowardsDestination" />
            </Sequence>
        </ReactiveSequence>
    </BehaviorTree>

    <BehaviorTree ID="DyingBehavior">
        <Sequence>
            <Action ID="Tumble" />
        </Sequence>
    </BehaviorTree>
</root>